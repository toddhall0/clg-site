    margin: var(--spacing-lg) 0;
  }

  .callout h4 { margin-top: 0; }
  .callout ul { margin-bottom: 0; }

  .highlight-box {
    background: linear-gradient(135deg, rgba(26, 155, 165, 0.1) 0%, rgba(26, 155, 165, 0.05) 100%);
    border: 1px solid rgba(26, 155, 165, 0.3);
    border-radius: 8px;
    padding: var(--spacing-lg);
    margin: var(--spacing-lg) 0;
  }

  .highlight-box h4 { margin-top: 0; }
  .highlight-box p { margin-bottom: var(--spacing-sm); }
  .highlight-box p:last-child { margin-bottom: 0; }

  .article-cta {
    background: var(--color-charcoal-light);
    border: 1px solid var(--color-charcoal-lighter);
    border-radius: 8px;
    padding: var(--spacing-xl);
    margin-top: var(--spacing-xl);
    text-align: center;
  }

  .article-cta h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-white);
    margin-top: 0;
    margin-bottom: var(--spacing-sm);
  }

  .article-cta p {
    color: var(--color-gray-400);
    margin-bottom: var(--spacing-md);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    font-size: 0.95rem;
    font-weight: 600;
    font-family: var(--font-body);
    text-decoration: none;
    border-radius: 4px;
    transition: all 150ms ease;
    cursor: pointer;
  }

  .btn-primary {
    color: var(--color-white);
    background: var(--color-teal);
  }

  .btn-primary:hover {
    background: var(--color-teal-light);
    transform: translateY(-2px);
  }

  .article-sidebar {
    display: flex;
    flex-direction: column;
