    border-radius: 8px;
    padding: var(--spacing-md);
  }

  .sidebar-card h4 {
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-teal);
    margin-bottom: var(--spacing-sm);
  }

  .sidebar-card ul { list-style: none; padding: 0; margin: 0; }
  .sidebar-card li { margin-bottom: var(--spacing-xs); }

  .sidebar-card a {
    font-size: 0.9rem;
    color: var(--color-cream);
    transition: color 150ms ease;
  }

  .sidebar-card a:hover { color: var(--color-teal-light); }

  .sidebar-contact {
    text-align: center;
    background: linear-gradient(135deg, var(--color-charcoal-light) 0%, var(--color-charcoal) 100%);
  }

  .sidebar-contact p {
    font-size: 0.9rem;
    color: var(--color-gray-400);
    margin-bottom: var(--spacing-sm);
  }

  .sidebar-phone {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-teal) !important;
  }

  @media (max-width: 900px) {
    .article-content { grid-template-columns: 1fr; }
    .article-sidebar { flex-direction: row; flex-wrap: wrap; }
    .sidebar-card { flex: 1; min-width: 200px; }
  }

  @media (max-width: 600px) {
    .article-meta { flex-direction: column; gap: var(--spacing-xs); }
    .article-sidebar { flex-direction: column; }
    .sidebar-card { min-width: 100%; }
  }
</style>
