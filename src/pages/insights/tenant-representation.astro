    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }

  .article-subtitle {
    font-size: 1.15rem;
    color: var(--color-gray-400);
    line-height: 1.6;
  }

  .article-image-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    margin-top: calc(-1 * var(--spacing-xl));
    position: relative;
    z-index: 2;
  }

  .article-image {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .article-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-content {
