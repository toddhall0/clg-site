    z-index: 0;
  }

  .article-hero-container {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    text-align: center;
  }

  .article-meta {
    display: flex;
    justify-content: center;
