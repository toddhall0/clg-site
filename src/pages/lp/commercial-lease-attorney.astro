---
const title = "Commercial Lease Attorney Phoenix | Camelback Law Group";
const description = "Arizona commercial lease attorneys for landlords and tenants. Lease review, drafting, and negotiation for retail, office, industrial, NNN, and ground leases. Call (480) 203-3039.";
const canonicalURL = "https://www.clglawaz.com/lp/commercial-lease-attorney";

const businessInfo = {
  name: "Camelback Law Group",
  phone: "(480) 203-3039",
  phoneRaw: "4802033039",
  email: "info@clglawaz.com",
  url: "https://www.clglawaz.com"
};

const services = [
  { name: "Lease Review & Analysis", desc: "Comprehensive review of commercial lease terms, identifying risks and opportunities." },
  { name: "Lease Drafting", desc: "Custom lease agreements that protect your interests from day one." },
  { name: "Lease Negotiation", desc: "Skilled negotiation to secure favorable terms for landlords and tenants." },
  { name: "NNN Lease Counsel", desc: "Triple net lease structuring, review, and negotiation expertise." },
  { name: "Ground Lease Agreements", desc: "Long-term ground lease drafting and negotiation for developers and landowners." },
  { name: "Retail Leases", desc: "Shopping center, standalone retail, and restaurant lease representation." },
  { name: "Office Leases", desc: "Office space leasing for tenants and building owners alike." },
  { name: "Industrial Leases", desc: "Warehouse, distribution, and manufacturing facility lease counsel." }
];

const differentiators = [
  { icon: "shield", title: "Protect Your Terms", desc: "We analyze every clause to protect your business interests." },
  { icon: "phone", title: "Direct Communication", desc: "Work directly with your attorney, not a chain of associates." },
  { icon: "scale", title: "Landlord & Tenant Rep", desc: "Experienced representing both sides—we know the leverage points." },
  { icon: "clock", title: "Responsive Service", desc: "Quick turnaround when you need lease review before signing." }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=AW-1002547078"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'AW-1002547078');
  </script>

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title}>
  <meta name="description" content={description}>
  <meta name="keywords" content="commercial lease attorney Phoenix, commercial lease lawyer Arizona, lease review attorney, NNN lease attorney, triple net lease lawyer, ground lease attorney, commercial lease negotiation, retail lease attorney, office lease lawyer, industrial lease attorney">
  <meta name="author" content="Camelback Law Group">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content={businessInfo.name}>
  <meta property="og:locale" content="en_US">

  <!-- Geo Tags -->
  <meta name="geo.region" content="US-AZ">
  <meta name="geo.placename" content="Phoenix">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Header with Navigation -->
  <header class="lp-header">
    <nav class="header-container">
      <a href="/" class="logo">
        <span class="logo-text">Camelback Law Group</span>
      </a>
      <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
        <span class="hamburger"></span>
      </button>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/#industries">Industries</a></li>
        <li><a href="/#about">About</a></li>
        <li><a href="/#services">Services</a></li>
        <li><a href="/#resource">Resources</a></li>
        <li><a href="/#insights">Insights</a></li>
        <li><a href="/#contact">Contact</a></li>
      </ul>
      <a href={`tel:${businessInfo.phoneRaw}`} class="header-phone">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <span>{businessInfo.phone}</span>
      </a>
    </nav>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg"></div>
      <div class="hero-container">
        <div class="hero-content">
          <p class="geo-indicator">Serving Phoenix, Scottsdale, Tempe, Mesa & Surrounding Areas</p>
          <h1>Commercial Lease Attorneys</h1>
          <p class="hero-subhead">Experienced legal counsel for commercial lease review, drafting, and negotiation. We protect landlords and tenants in retail, office, and industrial leases across Arizona.</p>
          <a href={`tel:${businessInfo.phoneRaw}`} class="phone-cta">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call {businessInfo.phone}
          </a>
        </div>

        <!-- Hero Form -->
        <div class="hero-form-container" id="hero-form">
          <div class="form-header">
            <h2>Get Your Lease Reviewed</h2>
            <p>Don't sign until we review. Response within one business day.</p>
          </div>
          <form
            name="lp-lease-contact"
            method="POST"
            action="/thank-you-contact"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="hero-form"
          >
            <input type="hidden" name="form-name" value="lp-lease-contact">
            <input type="hidden" name="source" value="Google Ads - Commercial Lease Services">
            <p class="hidden" aria-hidden="true">
              <label>Don't fill this out: <input name="bot-field"></label>
            </p>

            <div class="form-group">
              <label for="name">Name <span class="required">*</span></label>
              <input type="text" id="name" name="name" required placeholder="Your full name">
            </div>

            <div class="form-group">
              <label for="email">Email <span class="required">*</span></label>
              <input type="email" id="email" name="email" required placeholder="you@company.com">
            </div>

            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone" placeholder="(555) 123-4567">
            </div>

            <div class="form-group">
              <label for="lease-type">Type of Lease</label>
              <select id="lease-type" name="lease-type">
                <option value="">Select lease type</option>
                <option value="retail">Retail Lease</option>
                <option value="office">Office Lease</option>
                <option value="industrial">Industrial/Warehouse Lease</option>
                <option value="nnn">NNN (Triple Net) Lease</option>
                <option value="ground">Ground Lease</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="matter">Tell Us About Your Lease</label>
              <textarea id="matter" name="matter" rows="3" placeholder="New lease, renewal, or existing lease issue? Are you the landlord or tenant?"></textarea>
            </div>

            <button type="submit" class="btn-submit">Get Started Today</button>
          </form>
        </div>
      </div>
    </section>

    <!-- Value Proposition -->
    <section class="value-prop">
      <div class="section-container">
        <h2>Don't Sign Until We Review</h2>
        <p class="value-text">
          Commercial leases are complex documents that can bind your business for years—or even decades. Hidden clauses, unfavorable terms, and vague language can cost you thousands of dollars and create ongoing headaches. At Camelback Law Group, we review every provision, identify risks, and negotiate terms that protect your interests. Whether you're a landlord protecting your property or a tenant securing your business location, we provide the experienced counsel you need.
        </p>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="services">
      <div class="section-container">
        <h2>Commercial Lease Legal Services</h2>
        <div class="services-grid">
          {services.map((service) => (
            <div class="service-card">
              <h3>{service.name}</h3>
              <p>{service.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Work With Us -->
    <section class="differentiators">
      <div class="section-container">
        <h2>Why Work With Us</h2>
        <div class="diff-grid">
          {differentiators.map((diff) => (
            <div class="diff-card">
              <div class="diff-icon">
                {diff.icon === "shield" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                )}
                {diff.icon === "phone" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                )}
                {diff.icon === "scale" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
                  </svg>
                )}
                {diff.icon === "clock" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                )}
              </div>
              <h3>{diff.title}</h3>
              <p>{diff.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Lease Types Section -->
    <section class="lease-types">
      <div class="section-container">
        <h2>Lease Types We Handle</h2>
        <div class="lease-grid">
          <div class="lease-card">
            <h3>NNN (Triple Net) Leases</h3>
            <p>In triple net leases, tenants pay base rent plus property taxes, insurance, and maintenance. We ensure these obligations are clearly defined and fairly allocated.</p>
          </div>
          <div class="lease-card">
            <h3>Ground Leases</h3>
            <p>Long-term ground leases for development require careful attention to improvement ownership, reversion rights, and financing provisions.</p>
          </div>
          <div class="lease-card">
            <h3>Retail Leases</h3>
            <p>From shopping centers to standalone locations, retail leases involve unique concerns like exclusivity clauses, co-tenancy provisions, and percentage rent.</p>
          </div>
          <div class="lease-card">
            <h3>Office Leases</h3>
            <p>Office leases require attention to build-out allowances, operating expense calculations, expansion options, and sublease rights.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Bottom CTA -->
    <section class="bottom-cta">
      <div class="section-container">
        <div class="cta-content">
          <h2>Ready to Protect Your Lease Terms?</h2>
          <p>Contact us today to speak with an experienced commercial lease attorney.</p>
          <div class="cta-actions">
            <a href={`tel:${businessInfo.phoneRaw}`} class="btn-primary">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call {businessInfo.phone}
            </a>
            <a href="#hero-form" class="btn-secondary">Get Your Lease Reviewed</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="lp-footer">
    <div class="footer-container">
      <div class="footer-main">
        <span class="footer-logo">Camelback Law Group</span>
        <a href={`tel:${businessInfo.phoneRaw}`} class="footer-phone">{businessInfo.phone}</a>
      </div>
      <div class="footer-legal">
        <p>&copy; {new Date().getFullYear()} Camelback Law Group. All rights reserved.</p>
        <p class="disclaimer">This website is for informational purposes only and does not constitute legal advice.</p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const navLinks = document.querySelector('.nav-links');

    menuToggle?.addEventListener('click', () => {
      const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
      menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
      navLinks?.classList.toggle('active');
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href && href !== '#') {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            // Close mobile menu if open
            navLinks?.classList.remove('active');
            menuToggle?.setAttribute('aria-expanded', 'false');
          }
        }
      });
    });
  </script>
</body>
</html>

<style>
  /* ===== CSS Variables ===== */
  :root {
    --color-charcoal: #1a1f1f;
    --color-charcoal-light: #232a2a;
    --color-charcoal-lighter: #2d3636;
    --color-teal: #1a9ba5;
    --color-teal-light: #2eb8c4;
    --color-teal-dark: #147a82;
    --color-copper: #b87333;
    --color-copper-light: #d4894a;
    --color-cream: #f5f5f2;
    --color-cream-dark: #e8e8e4;
    --color-white: #ffffff;
    --color-gray-400: #9ca3a3;
    --color-gray-500: #6b7575;

    --font-display: 'Cormorant Garamond', Georgia, serif;
    --font-body: 'Source Sans 3', -apple-system, BlinkMacSystemFont, sans-serif;

    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-2xl: 4rem;

    --max-width: 1100px;
    --header-height: 70px;

    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;

    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.5);
  }

  /* ===== Reset ===== */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-cream);
    background-color: var(--color-charcoal);
    -webkit-font-smoothing: antialiased;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  ul { list-style: none; }

  .hidden { display: none !important; }

  /* ===== Header ===== */
  .lp-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background: rgba(26, 26, 31, 0.98);
    backdrop-filter: blur(10px);
    z-index: 1000;
    box-shadow: var(--shadow-sm);
  }

  .header-container {
    max-width: var(--max-width);
    height: 100%;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-text {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-white);
  }

  .header-phone {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-teal);
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-white);
    transition: background var(--transition-fast);
  }

  .header-phone:hover {
    background: var(--color-teal-light);
  }

  .header-phone svg {
    width: 18px;
    height: 18px;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--color-cream);
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-teal);
    transition: width var(--transition-base);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .mobile-menu-toggle {
    display: none;
    width: 32px;
    height: 32px;
    position: relative;
    background: none;
    border: none;
    cursor: pointer;
  }

  .hamburger,
  .hamburger::before,
  .hamburger::after {
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--color-cream);
    transition: transform var(--transition-base);
  }

  .hamburger {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    left: 0;
  }

  .hamburger::before { top: -7px; }
  .hamburger::after { top: 7px; }

  /* ===== Hero ===== */
  .hero {
    position: relative;
    padding: calc(var(--header-height) + var(--spacing-2xl)) 0 var(--spacing-2xl);
    min-height: 100vh;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 40%, rgba(26, 155, 165, 0.12) 0%, transparent 50%),
      linear-gradient(160deg, var(--color-charcoal) 0%, var(--color-charcoal-light) 100%);
    z-index: -1;
  }

  .hero-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: start;
  }

  .geo-indicator {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-teal);
    margin-bottom: var(--spacing-sm);
  }

  .hero-content h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }

  .hero-subhead {
    font-size: 1.15rem;
    color: var(--color-gray-400);
    line-height: 1.7;
    margin-bottom: var(--spacing-lg);
  }

  .phone-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: var(--color-copper);
    border-radius: 4px;
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--color-white);
    transition: background var(--transition-fast), transform var(--transition-fast);
  }

  .phone-cta:hover {
    background: var(--color-copper-light);
    transform: translateY(-2px);
  }

  .phone-cta svg {
    width: 22px;
    height: 22px;
  }

  /* ===== Hero Form ===== */
  .hero-form-container {
    background: var(--color-charcoal-light);
    border: 1px solid var(--color-charcoal-lighter);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .form-header {
    background: var(--color-teal-dark);
    padding: var(--spacing-md) var(--spacing-lg);
    text-align: center;
  }

  .form-header h2 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 0.25rem;
  }

  .form-header p {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.8);
  }

  .hero-form {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .form-group label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-cream);
  }

  .required {
    color: var(--color-copper);
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    padding: 0.75rem 1rem;
    font-size: 1rem;
    font-family: var(--font-body);
    color: var(--color-white);
    background: var(--color-charcoal);
    border: 1px solid var(--color-charcoal-lighter);
    border-radius: 4px;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-gray-500);
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-teal);
    box-shadow: 0 0 0 3px rgba(26, 155, 165, 0.15);
  }

  .form-group select {
    cursor: pointer;
    appearance: none;
