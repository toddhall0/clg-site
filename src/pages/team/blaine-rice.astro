---
import BaseLayout from '../../layouts/BaseLayout.astro';

const member = {
  name: "Blaine Rice",
  role: "Partner",
  email: "brice@clglawaz.com",
  phone: "(480) 203-3039",
  photo: "/images/team/blaine-rice-bg.jpg",
  linkedin: "",
};

const title = `${member.name} | ${member.role} | Camelback Law Group`;
const description = `Blaine Rice is a Partner at Camelback Law Group, specializing in commercial real estate law in Phoenix, Arizona.`;
---

<BaseLayout title={title} description={description}>
  <article class="team-member-page">
    <!-- Hero Section -->
    <header class="member-hero">
      <div class="member-hero-bg">
        <img src={member.photo} alt="" class="member-hero-img" aria-hidden="true" />
        <div class="member-hero-overlay"></div>
      </div>
      <div class="member-hero-container">
        <div class="member-intro">
          <h1>{member.name}</h1>
          <p class="member-role">{member.role}</p>
          <div class="member-contact">
            <a href={`mailto:${member.email}`} class="contact-link">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              {member.email}
            </a>
            <a href={`tel:${member.phone.replace(/[^0-9]/g, '')}`} class="contact-link">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              {member.phone}
            </a>
            {member.linkedin && (
              <a href={member.linkedin} class="contact-link" target="_blank" rel="noopener noreferrer">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
                  <circle cx="4" cy="4" r="2"/>
                </svg>
                LinkedIn
              </a>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="member-content">
      <div class="member-container">

        <!-- Professional Experience -->
        <section class="member-section">
          <h2>Professional Experience</h2>
          <div class="section-content">
            <p>Professional biography coming soon.</p>
          </div>
        </section>

        <!-- Areas of Practice -->
        <section class="member-section">
          <h2>Areas of Practice</h2>
          <div class="section-content">
            <ul class="work-list">
              <li>Commercial real estate transactions</li>
              <li>Real estate acquisitions and dispositions</li>
              <li>Commercial leasing</li>
            </ul>
          </div>
        </section>

        <!-- Education -->
        <section class="member-section">
          <h2>Education</h2>
          <div class="section-content">
            <ul class="education-list">
              <li>
                <strong>Law School</strong>
                <span>J.D.</span>
              </li>
              <li>
                <strong>University</strong>
                <span>B.A./B.S.</span>
              </li>
            </ul>
          </div>
        </section>

        <!-- Bar Admissions -->
        <section class="member-section">
          <h2>Bar Admissions</h2>
          <div class="section-content">
            <ul class="work-list">
              <li>State Bar of Arizona</li>
            </ul>
          </div>
        </section>

        <!-- CTA -->
        <section class="member-cta">
          <h3>Work with Blaine</h3>
          <p>Ready to discuss your commercial real estate matter?</p>
          <a href="/#contact" class="btn btn-primary">Schedule an Introduction</a>
        </section>

      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .team-member-page {
    background: var(--color-charcoal);
  }

  /* Hero Section */
  .member-hero {
    position: relative;
    padding: calc(var(--header-height) + var(--spacing-2xl)) 0 var(--spacing-2xl);
    background: var(--color-charcoal-light);
    min-height: 400px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .member-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .member-hero-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .member-hero-overlay {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(135deg, rgba(30, 34, 38, 0.92) 0%, rgba(30, 34, 38, 0.78) 40%, rgba(30, 34, 38, 0.6) 100%);
    z-index: 1;
  }

  .member-hero-container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .member-intro h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-xs);
    color: var(--color-white);
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.4);
  }

  .member-role {
    font-size: 1.35rem;
    color: var(--color-teal);
    font-weight: 500;
    margin-bottom: var(--spacing-lg);
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.3);
  }

  .member-contact {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--color-cream);
    font-size: 0.95rem;
    transition: color var(--transition-fast);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  .contact-link:hover {
    color: var(--color-teal);
  }

  .contact-link svg {
    width: 20px;
    height: 20px;
    color: var(--color-teal);
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
  }

  /* Main Content */
  .member-content {
    padding: var(--spacing-2xl) 0;
  }

  .member-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .member-section {
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--color-charcoal-lighter);
  }

  .member-section:last-of-type {
    border-bottom: none;
  }

  .member-section h2 {
    font-size: 1.35rem;
    color: var(--color-teal);
    margin-bottom: var(--spacing-sm);
  }

  .section-content {
    color: var(--color-cream);
    line-height: 1.65;
  }

  .section-content p {
    margin-bottom: var(--spacing-sm);
  }

  .section-content p:last-child {
    margin-bottom: 0;
  }

  .work-list,
  .education-list {
    list-style: none;
    padding: 0;
  }

  .work-list li {
    position: relative;
    padding-left: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
    color: var(--color-cream);
  }

  .work-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 8px;
    width: 6px;
    height: 6px;
    background: var(--color-teal);
    border-radius: 50%;
  }

  .education-list li {
    margin-bottom: var(--spacing-sm);
  }

  .education-list li strong {
    display: block;
    color: var(--color-white);
    font-size: 1.05rem;
  }

  .education-list li span {
    color: var(--color-gray-400);
    font-size: 0.95rem;
  }

  /* CTA Section */
  .member-cta {
    text-align: center;
    background: var(--color-charcoal-light);
    border: 1px solid var(--color-charcoal-lighter);
    border-radius: 8px;
    padding: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }

  .member-cta h3 {
    font-size: 1.35rem;
    margin-bottom: var(--spacing-xs);
  }

  .member-cta p {
    color: var(--color-gray-400);
    margin-bottom: var(--spacing-sm);
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    font-size: 0.95rem;
    font-weight: 600;
    font-family: var(--font-body);
    text-decoration: none;
    border-radius: 4px;
    transition: all var(--transition-fast);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-primary {
    color: var(--color-white);
    background: var(--color-teal);
    border-color: var(--color-teal);
  }

  .btn-primary:hover {
    color: var(--color-white);
    background: var(--color-teal-light);
    border-color: var(--color-teal-light);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .member-hero {
      min-height: 300px;
    }

    .member-hero-container {
      text-align: center;
    }

    .member-hero-overlay {
      background:
        linear-gradient(135deg, rgba(30, 34, 38, 0.93) 0%, rgba(30, 34, 38, 0.85) 50%, rgba(30, 34, 38, 0.75) 100%);
    }

    .member-intro h1 {
      font-size: 2rem;
    }

    .member-contact {
      justify-content: center;
    }
  }
</style>
