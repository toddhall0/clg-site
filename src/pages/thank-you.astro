---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Thank You | Camelback Law Group";
const description = "Thank you for your interest. Your resource is on its way.";
---

<BaseLayout title={title} description={description}>
  <section class="thank-you">
    <div class="thank-you-container">
      <div class="thank-you-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h1>Thank You!</h1>
      <p class="thank-you-message">Your request has been received. The resource you requested will be sent to the email address you provided shortly.</p>
      <p class="thank-you-note">Please check your inbox (and spam folder) within the next few minutes.</p>
      <div class="thank-you-ctas">
        <a href="/" class="btn btn-primary">Return to Homepage</a>
        <a href="#contact" class="btn btn-secondary">Schedule a Consultation</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .thank-you {
    min-height: calc(100vh - var(--header-height));
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--header-height) + var(--spacing-2xl)) var(--spacing-md) var(--spacing-3xl);
    background:
      radial-gradient(ellipse 80% 50% at 50% 50%, rgba(26, 155, 165, 0.1) 0%, transparent 50%),
      var(--color-charcoal);
  }

  .thank-you-container {
    max-width: 600px;
    text-align: center;
  }

  .thank-you-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--spacing-lg);
    color: var(--color-teal);
  }

  .thank-you-icon svg {
    width: 100%;
    height: 100%;
  }

  .thank-you h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-md);
  }

  .thank-you-message {
    font-size: 1.15rem;
    color: var(--color-cream);
    line-height: 1.7;
    margin-bottom: var(--spacing-sm);
  }

  .thank-you-note {
    font-size: 0.95rem;
    color: var(--color-gray-400);
    margin-bottom: var(--spacing-xl);
  }

  .thank-you-ctas {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    font-size: 0.95rem;
    font-weight: 600;
    font-family: var(--font-body);
    text-decoration: none;
    border-radius: 4px;
    transition: all var(--transition-fast);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-primary {
    color: var(--color-white);
    background: var(--color-teal);
    border-color: var(--color-teal);
  }

  .btn-primary:hover {
    color: var(--color-white);
    background: var(--color-teal-light);
    border-color: var(--color-teal-light);
    transform: translateY(-2px);
  }

  .btn-secondary {
    color: var(--color-teal);
    background: transparent;
    border-color: var(--color-teal);
  }

  .btn-secondary:hover {
    color: var(--color-white);
    background: var(--color-teal);
    transform: translateY(-2px);
  }

  @media (max-width: 480px) {
    .thank-you-ctas {
      flex-direction: column;
    }
  }
</style>
